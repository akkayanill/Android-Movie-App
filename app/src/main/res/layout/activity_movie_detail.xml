<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MovieDetailActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="180dp"
        android:layout_height="220dp"
        android:background="@color/colorPrimaryDark"
        android:scaleType="fitCenter"
        tools:srcCompat="@tools:sample/backgrounds/scenic" />

    <TextView
        android:id="@+id/titleTextView"
        android:layout_marginTop="15dp"
        android:text="title"
        android:textSize="27dp"
        android:textStyle="bold"
        android:layout_toRightOf="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <TextView
        android:id="@+id/durationTextView"
        android:text="Duration"
        android:textSize="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/titleTextView"
        android:layout_toRightOf="@+id/imageView"
        android:layout_marginTop="15dp" />
    <TextView
        android:id="@+id/ratingTextView"
        android:text="rating"
        android:textSize="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/durationTextView"
        android:layout_toRightOf="@+id/imageView"
        android:layout_marginTop="15dp" />


    <TextView
        android:id="@+id/genreTextView"
        android:text="Genre"
        android:textSize="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ratingTextView"
        android:layout_toRightOf="@+id/imageView"
        android:layout_marginTop="15dp"
        />

    <TextView
        android:id="@+id/plotLabel"
        android:text="Plot :"
        android:textSize="15dp"
        android:textStyle="bold"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView"
        android:layout_marginTop="20dp" />
    <TextView
        android:id="@+id/plotTextView"
        android:text="plot plot plot plot plot plot plot plot plot plot plot plot plot plot plot plot "
        android:textSize="17dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView"
        android:layout_toRightOf="@id/plotLabel"
        android:textStyle="bold"
        android:layout_marginTop="20dp" />
    <TextView
        android:id="@+id/castLabel"
        android:text="Cast :"
        android:textSize="15dp"
        android:textStyle="bold"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/plotTextView"
        android:layout_marginTop="40dp" />
    <TextView
        android:id="@+id/castTextView"
        android:text=" cast cast cast cast cast cast cast cast cast"
        android:textSize="17dp"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/plotTextView"
        android:layout_toRightOf="@id/castLabel"
        android:layout_marginTop="40dp" />

    <Button
        android:id="@+id/goBackButton"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="Back"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/castLabel" />

</RelativeLayout >